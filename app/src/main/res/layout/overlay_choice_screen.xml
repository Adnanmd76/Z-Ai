<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    app:cardElevation="12dp"
    android:backgroundTint="@color/overlay_background"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <!-- Title -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Quick Choice"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:gravity="center" />

            <!-- Close Button -->
            <Button
                android:id="@+id/btnClose"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/button_close"
                android:text="Ã—"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_secondary"
                android:gravity="center" />

        </LinearLayout>

        <!-- Choice Buttons Container -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Choice 1 Button -->
            <Button
                android:id="@+id/btnChoice1"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:text="ðŸ“± Quick Action"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/button_choice_1"
                android:layout_marginBottom="8dp"
                android:elevation="4dp"
                android:drawablePadding="8dp"
                android:gravity="center" />

            <!-- Choice 2 Button -->
            <Button
                android:id="@+id/btnChoice2"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:text="âš¡ Smart Mode"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/button_choice_2"
                android:layout_marginBottom="8dp"
                android:elevation="4dp"
                android:drawablePadding="8dp"
                android:gravity="center" />

            <!-- Choice 3 Button -->
            <Button
                android:id="@+id/btnChoice3"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:text="ðŸŽ¯ Focus Mode"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/button_choice_3"
                android:elevation="4dp"
                android:drawablePadding="8dp"
                android:gravity="center" />

        </LinearLayout>

        <!-- Drag Indicator -->
        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:background="@drawable/drag_indicator"
            android:layout_marginTop="16dp"
            android:alpha="0.6" />

        <!-- Instruction Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drag to move â€¢ Tap to select"
            android:textSize="10sp"
            android:textColor="@color/text_hint"
            android:layout_marginTop="4dp"
            android:alpha="0.7" />

    </LinearLayout>

</androidx.cardview.widget.CardView>