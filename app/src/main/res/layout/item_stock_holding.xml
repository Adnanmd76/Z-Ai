<?xml version=\"1.0\" encoding=\"utf-8\"?>\n<com.google.android.material.card.MaterialCardView\n    xmlns:android=\"http://schemas.android.com/apk/res/android\"\n    xmlns:app=\"http://schemas.android.com/apk/res-auto\"\n    android:layout_width=\"match_parent\"\n    android:layout_height=\"wrap_content\"\n    android:layout_marginVertical=\"4dp\"\n    app:cardBackgroundColor=\"@color/win_surface_dark\"\n    app:cardCornerRadius=\"12dp\"\n    app:cardElevation=\"3dp\">\n\n    <LinearLayout\n        android:padding=\"12dp\"\n        android:layout_width=\"match_parent\"\n        android:layout_height=\"wrap_content\"\n        android:gravity=\"center_vertical\"\n        android:orientation=\"horizontal\">\n\n        <!-- Left: Symbol + Company -->\n        <LinearLayout\n            android:layout_width=\"0dp\"\n            android:layout_weight=\"2\"\n            android:layout_height=\"wrap_content\"\n            android:orientation=\"vertical\">\n\n            <TextView\n                android:id=\"@+id/tv_symbol\"\n                android:layout_width=\"wrap_content\"\n                android:layout_height=\"wrap_content\"\n                android:text=\"AAPL\"\n                android:textColor=\"@color/win_text_on_primary\"\n                android:textSize=\"16sp\"\n                android:textStyle=\"bold\" />\n\n            <TextView\n                android:id=\"@+id/tv_company\"\n                android:layout_width=\"wrap_content\"\n                android:layout_height=\"wrap_content\"\n                android:text=\"Apple Inc.\"\n                android:textColor=\"@color/win_text_secondary\"\n                android:textSize=\"12sp\" />\n        </LinearLayout>\n\n        <!-- Middle: Quantity + Price -->\n        <LinearLayout\n            android:layout_width=\"0dp\"\n            android:layout_weight=\"2\"\n            android:layout_height=\"wrap_content\"\n            android:orientation=\"vertical\"\n            android:gravity=\"end\">\n\n            <TextView\n                android:id=\"@+id/tv_quantity\"\n                android:layout_width=\"wrap_content\"\n                android:layout_height=\"wrap_content\"\n                android:text=\"10 shares\"\n                android:textColor=\"@color/win_text_on_primary\"\n                android:textSize=\"12sp\" />\n\n            <TextView\n                android:id=\"@+id/tv_price\"\n                android:layout_width=\"wrap_content\"\n                android:layout_height=\"wrap_content\"\n                android:text=\"$185.32\"\n                android:textColor=\"@color/win_text_on_primary\"\n                android:textSize=\"14sp\"\n                android:textStyle=\"bold\" />\n        </LinearLayout>\n\n        <!-- Right: Gain/Loss -->\n        <LinearLayout\n            android:layout_width=\"0dp\"\n            android:layout_weight=\"1.5\"\n            android:layout_height=\"wrap_content\"\n            android:orientation=\"vertical\"\n            android:gravity=\"end\">\n\n            <TextView\n                android:id=\"@+id/tv_value\"\n                android:layout_width=\"wrap_content\"\n                android:layout_height=\"wrap_content\"\n                android:text=\"$1,853.20\"\n                android:textColor=\"@color/win_text_on_primary\"\n                android:textSize=\"13sp\" />\n\n            <TextView\n                android:id=\"@+id/tv_gain_loss\"\n                android:layout_width=\"wrap_content\"\n                android:layout_height=\"wrap_content\"\n                android:text=\"+\$120.50 (6.95%)\"\n                android:textColor=\"@color/crypto_green\"\n                android:textSize=\"12sp\" />\n        </LinearLayout>\n\n    </LinearLayout>\n\n</com.google.android.material.card.MaterialCardView>