<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/background_primary"
    android:gravity="center">

    <!-- App Logo/Icon -->
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="32dp"
        android:src="@drawable/ic_choice_screen"
        android:background="@drawable/circle_background"
        android:padding="24dp"
        android:contentDescription="Choice Screen Logo" />

    <!-- App Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Z-AI Choice Screen"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:layout_marginBottom="8dp" />

    <!-- App Description -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Smart overlay choice system for enhanced productivity"
        android:textSize="16sp"
        android:textColor="@color/text_secondary"
        android:textAlignment="center"
        android:layout_marginBottom="48dp" />

    <!-- Service Status Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:backgroundTint="@color/card_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Service Status"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="16dp" />

            <!-- Start Service Button -->
            <Button
                android:id="@+id/btnStartService"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Start Choice Screen"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/button_primary"
                android:layout_marginBottom="12dp"
                android:elevation="4dp" />

            <!-- Stop Service Button -->
            <Button
                android:id="@+id/btnStopService"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Stop Choice Screen"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/button_secondary"
                android:layout_marginBottom="16dp"
                android:elevation="4dp" />

            <!-- Settings Button -->
            <Button
                android:id="@+id/btnSettings"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Overlay Permissions"
                android:textSize="14sp"
                android:textColor="@color/accent_color"
                android:background="@drawable/button_outline"
                android:drawableStart="@drawable/ic_settings"
                android:drawablePadding="8dp"
                android:gravity="center" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Instructions Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        android:backgroundTint="@color/info_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How to Use"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Grant overlay permission when prompted\n2. Tap 'Start Choice Screen' to activate\n3. Choice overlay will appear on screen\n4. Drag to move, tap choices to select\n5. Use 'Stop' to deactivate the service"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:lineSpacingExtra="4dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>