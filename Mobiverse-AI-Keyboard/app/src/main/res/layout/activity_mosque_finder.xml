<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/win_background_dark">

    <!-- App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.Material3.Dark.ActionBar">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/islamic_green_primary"
            app:title="Mosque Finder"
            app:titleTextColor="@color/win_text_on_primary"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:menu="@menu/menu_mosque_finder" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Prayer Times Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_prayer_times"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="@color/islamic_surface"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Prayer Times Today"
                        android:textColor="@color/islamic_text_on_primary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:drawableStart="@drawable/ic_prayer"
                        android:drawablePadding="8dp" />

                    <!-- Prayer Times Grid -->
                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:columnCount="3"
                        android:rowCount="2">

                        <!-- Fajr -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="8dp">
                            <TextView
                                android:text="Fajr"
                                android:textColor="@color/islamic_text_secondary"
                                android:textSize="12sp" />
                            <TextView
                                android:id="@+id/tv_fajr"
                                android:text="05:15"
                                android:textColor="@color/islamic_text_on_primary"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <!-- Dhuhr -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="8dp">
                            <TextView
                                android:text="Dhuhr"
                                android:textColor="@color/islamic_text_secondary"
                                android:textSize="12sp" />
                            <TextView
                                android:id="@+id/tv_dhuhr"
                                android:text="12:30"
                                android:textColor="@color/islamic_text_on_primary"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <!-- Asr -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="8dp">
                            <TextView
                                android:text="Asr"
                                android:textColor="@color/islamic_text_secondary"
                                android:textSize="12sp" />
                            <TextView
                                android:id="@+id/tv_asr"
                                android:text="15:45"
                                android:textColor="@color/islamic_gold"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <!-- Maghrib -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="8dp">
                            <TextView
                                android:text="Maghrib"
                                android:textColor="@color/islamic_text_secondary"
                                android:textSize="12sp" />
                            <TextView
                                android:id="@+id/tv_maghrib"
                                android:text="18:20"
                                android:textColor="@color/islamic_text_on_primary"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <!-- Isha -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="8dp">
                            <TextView
                                android:text="Isha"
                                android:textColor="@color/islamic_text_secondary"
                                android:textSize="12sp" />
                            <TextView
                                android:id="@+id/tv_isha"
                                android:text="19:45"
                                android:textColor="@color/islamic_text_on_primary"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <!-- Qibla Direction Button -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_qibla"
                            style="@style/Widget.Material3.Button.TonalButton"
                            android:layout_width="0dp"
                            android:layout_columnWeight="1"
                            android:layout_height="wrap_content"
                            android:text="Qibla"
                            app:icon="@drawable/ic_compass"
                            android:layout_margin="4dp" />

                    </GridLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Map Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_map"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="@color/islamic_surface"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- Map Fragment Placeholder -->
                    <fragment
                        android:id="@+id/map_fragment"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:context=".MosqueFinderActivity" />

                    <!-- Map Controls Overlay -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|top"
                        android:layout_margin="12dp"
                        android:orientation="vertical">

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/fab_my_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="My Location"
                            app:srcCompat="@drawable/ic_my_location"
                            app:fabSize="mini"
                            app:backgroundTint="@color/islamic_green_primary"
                            android:layout_marginBottom="8dp" />

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/fab_refresh"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="Refresh Mosques"
                            app:srcCompat="@drawable/ic_refresh"
                            app:fabSize="mini"
                            app:backgroundTint="@color/islamic_green_primary" />

                    </LinearLayout>

                </FrameLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Nearby Mosques Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nearby Mosques"
                android:textColor="@color/islamic_text_on_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:drawableStart="@drawable/ic_mosque"
                android:drawablePadding="8dp" />

            <!-- Mosques RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_mosques"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/item_mosque" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- AI Assistant Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_ai_assistant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="AI Assistant"
        app:srcCompat="@drawable/ic_ai_sparkle"
        app:backgroundTint="@color/islamic_gold"
        app:tint="@color/win_text_on_primary"
        app:layout_anchor="@id/appbar"
        app:layout_anchorGravity="bottom|end"
        android:layout_margin="20dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
