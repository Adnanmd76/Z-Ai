<!-- res/layout/item_app_manageable.xml -->
<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_app_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_app_placeholder" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/tv_app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="App Name"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category: Social"
                android:textSize="12sp"
                android:textColor="@color/win_text_secondary" />

        </LinearLayout>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch_hide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hide"
            android:layout_marginEnd="8dp" />

        <ImageButton
            android:id="@+id/btn_lock"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_lock_open"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Lock App" />

        <ImageButton
            android:id="@+id/btn_category"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_category"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Change Category" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>