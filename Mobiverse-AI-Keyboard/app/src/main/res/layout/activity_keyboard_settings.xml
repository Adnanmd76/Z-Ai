<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobiverse AI Keyboard"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/btn_enable_keyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enable Keyboard"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btn_test_keyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Switch to AI Keyboard" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Features:\n• Voice input with AI correction\n• Smart predictions\n• Urdu + English support\n• 100% Free &amp; Open Source"
        android:textSize="14sp"
        android:layout_marginTop="24dp"
        android:gravity="center" />

</LinearLayout>