        <Key android:codes="-5" android:keyIcon="@drawable/ic_backspace" android:keyWidth="15%p" android:keyEdgeFlags="right" android:isRepeatable="true"/>
    </Row>

    <!-- Row 5: Space + Special -->
    <Row android:rowEdgeFlags="bottom">
        <Key android:codes="-2" android:keyLabel="ABC" android:keyWidth="20%p" android:keyEdgeFlags="left"/>
        <Key android:codes="44" android:keyLabel=","/>
